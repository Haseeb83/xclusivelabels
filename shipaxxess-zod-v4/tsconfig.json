{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["ESNext"],
		"module": "NodeNext",
		"skipLibCheck": true,
		"strict": true,
		"outDir": "./dist",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./@types"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
