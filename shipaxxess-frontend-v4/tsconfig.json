{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		/* Bundler mode */
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"@client/*": [
				"./src/*"
			],
			"@db/*": [
				"../shipaxxess-backend-v4/src/database/drizzle-orm/schemas/*"
			],
			"@pages": [
				"./src/pages/*"
			],
			/* Added path for shipaxxess-zod-v4 */
			"@shipaxxess/shipaxxess-zod-v4": [
				"../node_modules/@shipaxxess/shipaxxess-zod-v4/src/*"
			],
			"@shipaxxess/shipaxxess-zod-v4/types": [
				"../node_modules/@shipaxxess/shipaxxess-zod-v4/@types/*"
			]
		}
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
